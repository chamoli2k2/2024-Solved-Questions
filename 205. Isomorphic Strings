class Solution {
public:
    bool isIsomorphic(string s, string t) {
        unordered_map<char,char> mp1, mp2;
        int n = s.size();

        for(int i=0; i<n; i++){
            // Checking if we are getting the char first time
            if(mp1.count(s[i]) == 0 && mp2.count(t[i]) == 0){
                mp1[s[i]] = t[i];
                mp2[t[i]] = s[i];
            }
            else if(mp1[s[i]] != t[i] || mp2[t[i]] != s[i]){
                return false;
            }
        }

        return true;
    }
};
